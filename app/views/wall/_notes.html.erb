<% @notes.each do |note| %>
	   <% lat = note.latitude %>
              <% lon  = note.longitude  %>
              <% s = Geocoder.search([lat , lon]) %>
	<div class="well well-large">
		
		<blockquote>
		  <p><%= note.content %> </p>
		  <small><%= time_ago_in_words(note.created_at) %> ago  <cite title="Source Title"><%= s[0].address%></cite></small> 
		</blockquote>  

		<div class="btn-group pull-right">
		   <a class="btn btn-small" href="<%= url_for(messages_post_reply_path(note)) %>"><i class="icon-envelope"></i> &nbsp;priv</a>
		  <a class="btn btn-small" href="#"><i class="icon-eye-open"></i> &nbsp;map</a>
		  <a class="btn btn-small btn-warning" href="<%= url_for(messages_post_reply_path(note)) %>"><i class="icon-comment"></i> &nbsp;comment</a>
		</div>
		<div class="clearfix"></div>
		
    </div>
<% end %>